{
  "compileOnSave": true,
  "compilerOptions": {
    "incremental": true,
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "outDir": "./lib",
    "importHelpers": true,
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "skipLibCheck": true,
    "sourceMap": false,
    "paths": {
      "@bot-database/*": [
        "lib/*"
      ]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declarationDir": "./lib",
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      },
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ]
  },
  "exclude": [
    "lib/*",
    "node_modules/*"
  ],
  "include": [
    "Models",
    "VkApi",
    "utils",
    "DataBase.ts",
    "index.ts"
  ]
}