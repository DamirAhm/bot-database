{
  "compileOnSave": true,
  "compilerOptions": {
    "incremental": true,
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "outDir": "./lib",
    "importHelpers": true,
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "skipLibCheck": true,
    "sourceMap": false,
    "paths": {
      "@bot-database/*": [
        "lib/*"
      ]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declarationDir": "./lib",
  },
  "exclude": [
    "lib/*",
    "node_modules/*"
  ]
}